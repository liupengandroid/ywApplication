<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ghostwhite">
    <ImageView
        android:id="@+id/home_headview_top_imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_headview_type1"
            style="@style/textStyle"
            android:textColor="@color/red" />
        <TextView
            android:id="@+id/home_headview_type2"
          style="@style/textStyle"
            android:textColor="@color/red"
            android:layout_marginLeft="1dp"/>
        <TextView
            android:id="@+id/home_headview_type3"
            style="@style/textStyle"
            android:textStyle="bold"
            android:layout_marginLeft="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/home_headview_type1_count"
            style="@style/textStyle" />
        <TextView
            android:id="@+id/home_headview_type2_count"
            style="@style/textStyle"
            android:layout_marginLeft="1dp" />
        <TextView
            android:id="@+id/home_headview_type3_count"
            style="@style/textStyle"
            android:layout_marginLeft="1dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="最新"/>
    <HorizontalScrollView
        android:id="@+id/home_headview_scollView"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scrollbarAlwaysDrawVerticalTrack="false">
        <LinearLayout
            android:id="@+id/home_fragment_scoreView_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="2dp"/>
        </HorizontalScrollView>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:text="推荐"/>
</LinearLayout>