<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yinweiapplication.ui.HDdetailActivity">
    <RelativeLayout
        android:id="@+id/main_activity_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/huodong_detail_back_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/back_down"
           android:layout_marginLeft="10dp"
           android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/huodongxiangqing"
            android:textSize="25dp"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/huodong_detail_share_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/fenxiang_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/huodong_detail_ptr_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
