<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/gainsboro"
    tools:context="com.example.yinweiapplication.ui.WellcomeAddOurActivity">

    <EditText
        android:id="@+id/telePhoneNum_welcomeInOurActivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="手机号"
        android:textSize="28sp"
        android:textColorHint="@color/gainsboro"
        />
    <EditText
        android:id="@+id/passWord_welcomeInOurActivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_below="@id/telePhoneNum_welcomeInOurActivity"
        android:layout_marginTop="3dp"
        android:hint="验证码"
        android:textSize="28sp"
        android:textColorHint="@color/gainsboro"
        />
    <Button
        android:id="@+id/getCheck"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/telePhoneNum_welcomeInOurActivity"
        android:layout_alignRight="@id/passWord_welcomeInOurActivity"
        android:layout_marginRight="15dp"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:background="@color/black"/>



</RelativeLayout>
