<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">
        <ImageView
            android:id="@+id/icon_member_list"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"/>
        <TextView
            android:id="@+id/icon_member_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="佚名"
            android:layout_toRightOf="@id/icon_member_list"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/icon_member_time_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_member_name_list"
            android:textSize="15sp"
            android:layout_toRightOf="@id/icon_member_list"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/image_main_list"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        />
    <TextView
        android:id="@+id/dish_name_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="3dp"
        />

    <TextView
        android:id="@+id/address_dish_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_margin="3dp"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/member_names_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textSize="15sp"
        />


</LinearLayout>
